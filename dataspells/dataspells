paste("string",i)

##
## Reading CSV's
##

read.csv("file.csv, stringsAsFactors=FALSE) ## doesn't convert strings to factors when loading csv's

write.csv(data, file="file.csv", row.names=FALSE) ## doesn't add the rownames when writing a csv.

##
## Update packages
##

update.packages()

##
## Quick preview
##

head() and tail() ##show the first and last parts of a dataframe, vector, matrix, etc.

##
## spatial plotting
##

library(raster)
library(fields)
image(rasterObject)
map(database = 'state', add = TRUE)

##
## plotting symbols
##

expression(sigma[beta]^2) ## <- \sigma^2_\beta in latex
